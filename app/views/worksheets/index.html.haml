=breadcrumb_tag do
  %li
    Сайт знакомств
  %li.active
    = t('headers.worksheets.index')
.page-header
  %h1= t('app.worksheets.index')




.table-responsive
  %table.table.table-hover.table-striped.table-condensed
    %caption{:align => "bottom"}
      = link_to new_worksheet_path, class: 'btn btn-success' do
        = fa_icon :plus
        = t('buttons.new.worksheet')
    %thead
      %tr
        %th= Worksheet.human_attribute_name(:client_id)
        %th= Worksheet.human_attribute_name(:description_client)
        %th= Worksheet.human_attribute_name(:hobbies)
        %th= Worksheet.human_attribute_name(:pernicious_habits)
        %th= Worksheet.human_attribute_name(:accommodation_type)
        %th= Worksheet.human_attribute_name(:purpose_acquaintance)
        %th
    %tbody
      - @worksheets.each do |worksheet|
        %tr
          %td{:data => Worksheet.human_attribute_name(:client_id)}= worksheet.client.client_name
          %td{:data => Worksheet.human_attribute_name(:description_client)}= worksheet.description_client
          %td{:data => Worksheet.human_attribute_name(:hobbies)}= worksheet.hobbies
          %td{:data => Worksheet.human_attribute_name(:pernicious_habits)}= worksheet.pernicious_habits.delete("[,],\"")
          %td{:data => Worksheet.human_attribute_name(:accommodation_type)}= worksheet.accommodation_type
          %td{:data => Worksheet.human_attribute_name(:purpose_acquaintance)}= worksheet.purpose_acquaintance
          %td.right.btn-group-vertical
            = link_to worksheet, class: 'btn btn-warning' do
              = fa_icon :eye
              = t('buttons.show')
            = link_to edit_worksheet_path(worksheet), class: 'btn btn-info' do
              = fa_icon :edit
              = t('buttons.edit')
            = link_to worksheet, :method => :delete,
            :data => { :confirm => t('buttons.confirm.worksheet') },
            class: 'btn btn-danger' do
              = fa_icon :trash
              = t('buttons.destroy')
